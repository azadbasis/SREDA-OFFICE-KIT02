<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="50dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="20dp">


        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">


            <ImageView
                android:id="@+id/iv_profile_display_photo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/playstore_icon" />

        </FrameLayout>


        <LinearLayout
            android:id="@+id/ll_meeting_title"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:minWidth="150dp"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="0dp"
            android:visibility="visible">

            <azhar.testlayoutvisibility.nanosoft.usemyappashomescreenandroid.widgets.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_meeting_notice"
                android:textAppearance="?android:attr/textAppearanceLargeInverse"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <azhar.testlayoutvisibility.nanosoft.usemyappashomescreenandroid.widgets.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:text="@string/label_meeting_date"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/black"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_meeting_location"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:minWidth="150dp"
            android:orientation="horizontal"
            android:paddingLeft="5dp"
            android:paddingRight="0dp"
            android:visibility="visible">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_meeting_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintTextAppearance="@style/HintAppearance">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/tietxt_meeting_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/gray_transparent_70"
                    android:hint="@string/hint_meeting_address_1"
                    android:inputType="textPostalAddress|textCapWords"
                    android:minHeight="40dp"
                    android:textColor="@color/text_2" />

            </android.support.design.widget.TextInputLayout>
            />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_meeting_time"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:minWidth="150dp"
            android:orientation="horizontal"

            android:paddingLeft="20dp"
            android:paddingRight="0dp"
            android:visibility="visible">

            <azhar.testlayoutvisibility.nanosoft.usemyappashomescreenandroid.widgets.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:text="@string/label_meeting_date_time"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/black"
                android:textStyle="bold" />

        </LinearLayout>

        <azhar.testlayoutvisibility.nanosoft.usemyappashomescreenandroid.widgets.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/label_profile"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/text_red_3"
            android:textStyle="bold" />

        <azhar.testlayoutvisibility.nanosoft.usemyappashomescreenandroid.widgets.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/btn_name"
            android:textColor="@color/text_red_3" />


        <EditText
            android:id="@+id/etxt_profile_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/gray_transparent_70"
            android:inputType="textPersonName|textCapWords"
            android:lines="1"
            android:maxLines="1"
            android:minHeight="40dp"
            android:text="@string/btn_name"
            android:textColor="@color/text_2" />

        <azhar.testlayoutvisibility.nanosoft.usemyappashomescreenandroid.widgets.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/label_email"
            android:textColor="@color/text_red_3" />


        <EditText
            android:id="@+id/etxt_profile_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/gray_transparent_70"
            android:inputType="textEmailAddress"
            android:lines="1"
            android:maxLines="1"
            android:minHeight="40dp"
            android:text="@string/hint_email"
            android:textColor="@color/text_2" />

        <azhar.testlayoutvisibility.nanosoft.usemyappashomescreenandroid.widgets.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/hint_mobile"
            android:textColor="@color/text_red_3" />


        <azhar.testlayoutvisibility.nanosoft.usemyappashomescreenandroid.widgets.CustomTextView
            android:id="@+id/txt_profile_mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="?selectableItemBackground"
            android:gravity="bottom"
            android:minHeight="35dp"
            android:text="@string/sample_phone"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/text_2" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="2dp"
            android:background="@color/text_1" />


        <azhar.testlayoutvisibility.nanosoft.usemyappashomescreenandroid.widgets.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="@string/label_address"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/text_red_3"
            android:textStyle="bold" />


        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_profile_address_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintTextAppearance="@style/HintAppearance">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/tietxt_profile_address_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/gray_transparent_70"
                android:hint="@string/hint_address_1"
                android:inputType="textPostalAddress|textCapWords"
                android:minHeight="40dp"
                android:textColor="@color/text_2" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_profile_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:hintTextAppearance="@style/HintAppearance">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/tietxt_profile_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/gray_transparent_70"
                android:hint="@string/hint_city"
                android:inputType="textCapWords"
                android:lines="1"
                android:maxLines="1"
                android:minHeight="40dp"
                android:textColor="@color/text_2" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_profile_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:hintTextAppearance="@style/HintAppearance">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/tietxt_profile_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/gray_transparent_70"
                android:hint="@string/hint_state"
                android:inputType="textCapWords"
                android:lines="1"
                android:maxLines="1"
                android:minHeight="40dp"
                android:textColor="@color/text_2" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_profile_postal_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:hintTextAppearance="@style/HintAppearance">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/tietxt_profile_postal_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/gray_transparent_70"
                android:hint="@string/hint_postal_code"
                android:inputType="textCapWords|phone"
                android:lines="1"
                android:maxLines="1"
                android:minHeight="40dp"
                android:textColor="@color/text_2" />

        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
