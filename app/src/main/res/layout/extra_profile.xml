<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".7"
            android:background="#006efe">

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.1"
            android:background="#fff"
            />

    </LinearLayout>

    <ImageView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:src="@drawable/backwardarrow"
        android:layout_marginTop="10dp"

        />

    <azhar.testlayoutvisibility.nanosoft.usemyappashomescreenandroid.customfonts.MyTextView
        android:visibility="gone"
        android:id="@+id/submitProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submint"
        android:textSize="15dp"
        android:textColor="@color/white"
        android:background="@drawable/rect"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        />

    <ImageView
        android:id="@+id/deleteProfile"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:src="@drawable/ic_action_delete"
        android:layout_marginTop="10dp"
        android:layout_alignParentEnd="true"
        />

    <LinearLayout
        android:layout_below="@+id/usericon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/cameraSetting"
        android:layout_marginTop="0dp"
        android:padding="0dp">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@drawable/camera"
            android:layout_gravity="right"/>


        <azhar.testlayoutvisibility.nanosoft.usemyappashomescreenandroid.customfonts.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload Cover Picture"
            android:textColor="#fff"
            android:textSize="14.5dp"
            android:layout_weight="1"
            android:layout_marginLeft="8dp"
            android:layout_gravity="center"
            android:letterSpacing="0.02"

            />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@drawable/ic_action_edit_sc"
            android:layout_gravity="right"
            android:id="@+id/scProfleEdit"/>
    </LinearLayout>
    <ScrollView
        android:layout_below="@+id/cameraSetting"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:padding="16dp"
            android:paddingTop="12dp"
            android:background="#f3f3f3"
            android:layout_height="wrap_content">
            <!--****NAME TEXT****-->



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="16dp">

                <TextView
                    android:id="@+id/name1"
                    android:layout_weight="1.5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SC NAME"
                    android:textColor="#333333" />

                <TextView
                    android:id="@+id/name2"
                    android:layout_weight=".5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="SC First and Name Known By"
                    android:textColor="#c3c3c3" />

                <ImageView
                    android:id="@+id/edit01"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_action_edit"


                    />
            </LinearLayout>


            <!--****Your name TEXT****-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingTop="16dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:background="#fff"
                    android:layout_marginRight="16dp">

                    <EditText
                        android:id="@+id/nameEditTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="#333333"
                        android:background="#00000000"
                        android:maxLines="1" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#dad8d8" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#fff"
                    android:layout_weight="1"
                    >

                    <EditText
                        android:id="@+id/posEditTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="#333333"
                        android:background="#00000000"
                        android:maxLines="1" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#dad8d8" />
                </LinearLayout>
            </LinearLayout>


            <!--****CARD TEXT****-->


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="12dp">

                    <TextView
                        android:id="@+id/card1"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="SC NUMBER"
                        android:textColor="#333333" />

                    <TextView
                        android:id="@+id/card2"
                        android:layout_weight="0.5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="The long number on your card"
                        android:textColor="#c3c3c3"
                        />
                    <ImageView
                        android:id="@+id/edit02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_action_edit"


                        />
                </LinearLayout>
            </LinearLayout>



            <!--****CARD NO.****-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fff"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/card3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="#333333"
                        android:background="#00000000"
                        android:maxLines="1"
                        android:inputType="number"
                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#dad8d8" />
                </LinearLayout>
            </LinearLayout>


            <!--****DATE****-->


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="12dp">

                    <TextView
                        android:id="@+id/date1"
                        android:layout_weight="5.5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="DATE OF BIRTH"
                        android:textColor="#333333" />
                    <ImageView
                        android:id="@+id/edit03"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_action_edit"

                        />

                </LinearLayout>
            </LinearLayout>


            <!--****CALENDAR****-->


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="16dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#fff"
                    >

                    <EditText
                        android:id="@+id/calendarTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#00000000"
                        android:onClick="setDate"
                        android:textColor="#333333"
                        android:hint="dd/mm/year"
                        android:inputType="number"


                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#dad8d8" />
                </LinearLayout>
            </LinearLayout>


            <!--CURRENT AGE-->


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="12dp">

                    <TextView
                        android:id="@+id/age1"
                        android:layout_weight=".5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="CURRENT AGE"
                        android:textColor="#333333"
                        />

                    <TextView
                        android:id="@+id/age2"
                        android:layout_weight="0.7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="at least 1 digit"
                        android:textColor="#c3c3c3"
                        />
                    <ImageView
                        android:id="@+id/edit04"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_action_edit"

                        />
                </LinearLayout>
            </LinearLayout>


            <!--****AGE NO.****-->


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="16dp"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#fff"
                    >

                    <EditText
                        android:id="@+id/age3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="#333333"
                        android:background="#00000000"
                        android:inputType="number"
                        android:maxLength="3" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#dad8d8" />
                </LinearLayout>
            </LinearLayout>

            <!--GENDER-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="12dp">

                    <TextView
                        android:id="@+id/gender1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="GENDER"
                        android:layout_weight="5.5"
                        android:textColor="#333333" />

                    <ImageView
                        android:id="@+id/edit05"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_action_edit"

                        />
                </LinearLayout>
            </LinearLayout>


            <!--****GENDER FIELD****-->


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="16dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#fff"
                    >

                    <EditText
                        android:id="@+id/gender2"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="#333333"
                        android:background="#00000000"
                        android:maxLines="1" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#dad8d8" />

                </LinearLayout>
            </LinearLayout>

            <!--****ADDRESS 1****-->


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="12dp">

                    <TextView
                        android:id="@+id/addL1"
                        android:layout_weight="5.5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Is Primary Carer?"
                        android:textColor="#333333" />
                    <ImageView
                        android:id="@+id/edit06"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_action_edit"

                        />

                </LinearLayout>
            </LinearLayout>


            <!--****ADDRESS LINE 1 FIELD****-->


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="16dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#fff"
                    >

                    <EditText
                        android:id="@+id/addL2"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="#333333"
                        android:background="#00000000"
                        android:maxLines="1" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#dad8d8" />
                </LinearLayout>
            </LinearLayout>



            <!--****ADDRESS 2****-->


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="12dp">

                    <TextView
                        android:id="@+id/addL3"
                        android:layout_weight="5.5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Reason for Joining"
                        android:textColor="#333333" />
                    <ImageView
                        android:id="@+id/edit07"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_action_edit"

                        />

                </LinearLayout>
            </LinearLayout>


            <!--****ADDRESS LINE 2 FIELD****-->


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="16dp"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#fff"
                    >

                    <EditText
                        android:id="@+id/addL4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="#333333"
                        android:background="#00000000"
                        android:maxLines="1" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#dad8d8" />
                </LinearLayout>
            </LinearLayout>


            <!--REASON FOR JOINING-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="12dp">

                    <TextView
                        android:id="@+id/joining1"
                        android:layout_weight="5.5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Reason for leaving"
                        android:textColor="#333333" />
                    <ImageView
                        android:id="@+id/edit08"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_action_edit"

                        />

                </LinearLayout>
            </LinearLayout>


            <!--****ADDRESS LINE 2 FIELD****-->


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="16dp"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#fff"
                    >

                    <EditText
                        android:id="@+id/joining2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="#333333"
                        android:background="#00000000"
                        android:maxLines="1" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#dad8d8" />
                </LinearLayout>
            </LinearLayout>

            <!--HOUSEHOLD-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="12dp">

                    <TextView
                        android:id="@+id/household1"
                        android:layout_weight="5.5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Is the SC living in the same household as 12 months ago (at the time of the last interview)?"
                        android:textColor="#333333" />
                    <ImageView
                        android:id="@+id/edit09"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_action_edit"

                        />

                </LinearLayout>
            </LinearLayout>


            <!--****ADDRESS LINE 2 FIELD****-->


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="16dp"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#fff"
                    >

                    <EditText
                        android:id="@+id/household2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="#333333"
                        android:background="#00000000"
                        android:maxLines="1" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#dad8d8" />
                </LinearLayout>
            </LinearLayout>
            <!--****CVV****-->


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="12dp">

                    <TextView
                        android:id="@+id/ccv1"
                        android:layout_weight=".7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="FAMILY MEMBER"
                        android:textColor="#333333"
                        />

                    <TextView
                        android:id="@+id/ccv2"
                        android:layout_weight="0.5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="at least 1 digit"
                        android:textColor="#c3c3c3"
                        />
                    <ImageView
                        android:id="@+id/edit10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_action_edit"

                        />
                </LinearLayout>
            </LinearLayout>


            <!--****FAMILY MEMBER NO.****-->


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="16dp"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#fff"
                    >

                    <EditText
                        android:id="@+id/ccv3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="#333333"
                        android:background="#00000000"
                        android:inputType="number"
                        android:maxLength="3" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#dad8d8" />
                </LinearLayout>
            </LinearLayout>

            <!--****CITY AND STATE****-->


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="16dp">

                <TextView
                    android:id="@+id/city1"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="FAMILY MEMBER"
                    android:textColor="#333333" />
                <View
                    android:layout_width="5dp"
                    android:layout_height="15dp"
                    android:background="#fa0606"/>
                <TextView
                    android:id="@+id/state1"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="BORN"
                    android:textColor="#333333" />

                <View
                    android:layout_width="5dp"
                    android:layout_height="15dp"
                    android:background="#fa0606"/>
                <TextView
                    android:id="@+id/state"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="OCCUPATION"
                    android:textColor="#333333" />

                <View
                    android:layout_width="5dp"
                    android:layout_height="15dp"
                    android:background="#fa0606"/>
                <TextView
                    android:id="@+id/state0"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="RELATIONSHIP"
                    android:textColor="#333333" />
                <ImageView
                    android:id="@+id/edit11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_action_edit"

                    />
            </LinearLayout>


            <!--****CITY AND STATE   TEXT****-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingTop="16dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:background="#fff"
                    android:layout_marginRight="16dp">

                    <EditText
                        android:id="@+id/city2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="#333333"
                        android:background="#00000000"
                        android:maxLines="1" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#dad8d8" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:background="#fff"
                    >

                    <EditText
                        android:id="@+id/state21"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="#333333"
                        android:background="#00000000"
                        android:layout_weight="1"
                        android:maxLines="1" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#dad8d8" />


                </LinearLayout>
            </LinearLayout>


            <!--****ZIPCODE AND COUNTRY****-->


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="16dp">

                <TextView
                    android:id="@+id/zip1"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ZIP CODE"
                    android:inputType="number"
                    android:textColor="#333333" />

                <TextView
                    android:id="@+id/cou1"
                    android:layout_weight="1.1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="COUNTRY"
                    android:textColor="#333333" />
                <ImageView
                    android:id="@+id/edit12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_action_edit"

                    />
            </LinearLayout>


            <!--****ZIPCODE AND COUNTRY TEXT****-->

            <LinearLayout
                android:layout_width="match_parent"
